# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Auth
GET     /login                      controllers.AuthController.login()
POST    /login                      controllers.AuthController.attempt()
GET     /logout                     controllers.AuthController.logout()

# Rating
GET     /movie                      controllers.RatingController.page(page: Int = 1)
GET     /movie/page                 controllers.RatingController.page(page: Int = 1)
GET     /movie/page/:page           controllers.RatingController.page(page: Int)
GET     /movie/search/page/:page    controllers.RatingController.search(page: Int)
POST    /movie/rate                 controllers.RatingController.rate()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
